<h2>Créer un compte</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username,
                required: true,
                input_html: { autocomplete: "Nom d'utilisateur" } %>
    <%= f.input :city,
                required: true,
                input_html: { autocomplete: "Ville" } %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "votre adresse mail" } %>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                input_html: { autocomplete: "mot de passe" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "mot de passe" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Créer" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
